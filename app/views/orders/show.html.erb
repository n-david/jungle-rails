<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h2>Thank you for your order!</h2>
    <h5>- Email sent to <%= @order.email %></h5>
  </div>
  <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order_total = 0 %>
        <% @quantity_total = 0 %>
        <% @line_items.each do |line_item| %>
          <%= render 'line_item', product_id: line_item.product_id, quantity: line_item.quantity %>
        <% end %>
       </tbody>
      <tfoot>
        <tr>
          <th colspan="2">
            GRAND TOTAL:
          </th>
          <th>
            <%= @quantity_total %>
          </th>
          <th>
            <%= @order_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
